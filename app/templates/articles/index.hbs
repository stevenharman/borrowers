<h2>Articles Index</h2>

<table class="primary">
  <thead>
    <tr>
      <th>Description</th>
      <th>Notes</th>
      <th>Borrowed Since</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each item in controller itemController='articles/item'}}
      <tr>
        <td>{{item.description}}</td>
        <td>{{item.notes}}</td>
        <td>{{formatted-date item.createdAt 'LL'}}</td>
        <td>{{view 'select' content=controller.states selection=item.state}}</td>
        <td>
          {{#if item.isSaving}}
            <p>Saving...</p>
          {{/if}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
